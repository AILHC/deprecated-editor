:host {
    display: block
    position: relative

    .CodeMirror {
        overflow-y: hidden
        overflow-x: hidden
        height: auto
        line-height: 130%

        font-family: 'DejaVu Sans Mono', monospace
        font-size: 15px
    }

    .CodeMirror-scroll {
        overflow-y: hidden
        overflow-x: hidden
    }

    .CodeMirror-hscrollbar{
        overflow-x: visible
        overflow-y: visible
    }

    .CodeMirror-dialog {
        position: absolute
        left: 0
        right: 0
        z-index: 15
        padding: .1em .8em
        overflow: hidden

        color: #aaa
        background: #333

        input {
            font-size: 13px
            font-family: 'DejaVu Sans Mono', monospace
        }
    }

    // .lint-error {font-family: arial; font-size: 70%; background: #ffa; color: #a00; padding: 2px 5px 3px; }
    // .lint-error-icon {color: white; background-color: red; font-weight: bold; border-radius: 50%; padding: 0 3px; margin-right: 7px;}
}
