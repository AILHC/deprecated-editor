:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    #statusBar {
        width: 100%
        height: 30px
        ul {
            left: 0px
            padding: 0px
            list-style-type: none
            li {
                float: left
                font-family: arial
                font-size: 12px
                margin-left: 10px
            }
        }
    }
}
