:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    min-width: 600px

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    .status-bar {
        width: 100%
        line-height: 20px
    }

    .space{
        width: 10px
        height: 10px
    }

    .space-2{
        width: 20px
        height: 20px
    }

    .space-3{
        width: 30px
        height: 30px
    }
}
