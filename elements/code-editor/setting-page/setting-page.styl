:host {
    width: 100%
    //height: 400px
    position: absolute
    //margin-top: -400px
    display: none
    z-index: 999
    background: rgb(48,48,48)
    -webkit-animation: show 0.2s
    font-family: Helvetica,Arial,sans-serif
    color: #aaa
    font-size: 12px

    @-webkit-keyframes show
    {
        from {margin-top: -400px;}
        to {margin-top: 20px;}
    }

    .prop {
        width: 100%
        height: 24px
        margin-bottom: 4px
        margin-top: 4px
        fire-ui-label {
            width: 50%
            float: left
            line-height: 24px
        }
        fire-ui-select {
            width: 50%
            float: left
        }

        fire-ui-unit-input {
            width: 50%
            float: left
        }
    }
}
