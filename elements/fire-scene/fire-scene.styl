:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap     
    align-items: stretch

    font-size: 12px
    white-space: nowrap

    // box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2);
    color: #ddd
    font-family: Helvetica,Arial,sans-serif
    cursor: default 

    .border {
        border: 1px solid #171717
        position: relative
        background: #333
    }

    #toolBar {
        padding-left: 5px
        padding-right: 5px
        margin-top: 5px
        margin-bottom: 5px

        span.space {
            width: 5px
        }
    }

    fire-ui-text-input {                         
        height: 18px
        width: 180px

        & /deep/ .input-area {                         
            padding: 0px 2px
        }
    }
}
