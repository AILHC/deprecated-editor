html /deep/ {
    assets-tree[focused] {
        assets-item[selected]::shadow {
            .wrapper {
                .bar {
                    background: #059
                }
            }
        }

        assets-item[conflicted]::shadow {
            .wrapper {
                .bar {
                    background: #900
                }
            }
        }
    }

    // calculate by .fold-icon.(width+marginRight) + .type-icon.(width+marginRight)
    assets-item>assets-item{
        margin-left: 30px
    }
    // calculate by .type-icon.(width+marginRight)
    assets-item>assets-item[foldable] {
        margin-left: 18px
    }

    hierarchy-tree[focused] {
        hierarchy-item[selected]::shadow {
            .wrapper {
                .bar {
                    background: #059
                }
            }
        }
    }
    // calculate by .fold-icon.(width+marginRight)
    hierarchy-item {
        margin-left: 12px
    }
    // calculate by .fold-icon.(width+marginRight) * 2
    hierarchy-item>hierarchy-item {
        margin-left: 24px
    }
    // calculate by .fold-icon.(width+marginRight)
    hierarchy-item>hierarchy-item[foldable] {
        margin-left: 12px
    }

    ::-webkit-scrollbar {
        height: 5px
        width: 5px
    }
    ::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3)
    }
    ::-webkit-scrollbar-track {
        // background-clip: padding-box
        background-color: rgba(255,255,255,0.1)
    }
    ::-webkit-scrollbar-corner {
        background-color: #171717
    }
    ::-webkit-scrollbar-button {
        display: none
    }
}
