:host {
    display: block
    padding: 5px
    margin-bottom: 1px
    color: #999

    background: #222

    &(:nth-child(even)) {
        background: #292929
    }

    i {
        margin-right: 5px
        width: 20px
        text-align: center

        &.fa-info {
            color: #aaa
        }

        &.fa-warning {
            color: #aa0
        }

        &.fa-times-circle {
            color: #a00
        }
    }

    .text.info {
        color: #0af
    }

    // .text.warn {
    //     color: #aa0
    // }

    // .text.error {
    //     color: #a00
    // }
}

