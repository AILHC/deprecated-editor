:host {
    box-sizing: border-box
    border: 1px solid #171717
    padding: 5px 10px

    white-space: normal
    overflow-x: hidden
    overflow-y: auto

    background-color: #333

    .text {
        -webkit-user-select: initial
        user-select: initial

        cursor: text

        &::selection {
            background-color: #09f - 20%
        }
    }

    i {
        font-size: 20px

        &.fa-info {
            color: #aaa
        }

        &.fa-warning {
            color: #aa0
        }

        &.fa-times-circle {
            color: #a00
        }
    }
}
