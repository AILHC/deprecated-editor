

:host {
    width: 170px
    height: auto
    background: #939393
    border: 1px solid #1e1e1e
    border-radius: 2px
    box-shadow: 0px 0px 10px #201C1C
    position: absolute
    right: 10px
    z-index: 999
    top: 50px
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
}

.sharp {
    width: 15px
    height: 15px
    background: #939393
    border-left: 1px solid #1e1e1e
    border-top: 1px solid #1e1e1e

    left: 116px
    margin-top: -9px
    margin-left: 116px
    z-index: 1
    -webkit-transform: rotate(45deg)
}


.list {
    width: 100%
    border-radius: 2px
    float: left
    z-index: 2
    background: #939393
    top: 0
    overflow: hidden

    .userName {
        width: 100%
        height: 35px
        border-bottom: 1px solid #777
        list-style: none
        color: black
        line-height: 35px
        padding-left: 10px
    }
    .item {
        color: black
        height: 25px
        float: left
        width: 100%
        padding-left: 10px
        line-height: 25px
        font-size: 12px
        border-bottom: 1px solid #777
        cursor: pointer
        &:hover {
            background: #939393 - 20%
        }
    }
}
