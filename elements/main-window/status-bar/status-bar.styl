:host {
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: center

    position: relative
    box-sizing: border-box
    font-size: 12px
    height: 20px
    margin: 5px 5px 0px

    color: #aaa

    .version {
        color: #f90
    }

    .watch-status {
        font-weight: bold

        &.start-watching { color: #f90 }
        &.watching { color: #0f0 }
        &.stop-watching { color: #f90 }
        &.syncing { color: #f90 }
        &.normal { color: #555 }
        &.unknown { color: #f00 }
    }
}
