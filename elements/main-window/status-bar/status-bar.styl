:host {
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: center

    position: relative
    box-sizing: border-box
    font-size: 12px
    height: 20px
    margin: 5px 5px 0px

    color: #aaa
}

.version {
    color: #f90
}

span {
    margin-right: 5px
}

.watch {
    &.starting { color: #f90 }
    &.on { color: #0f0 }
    &.stopping { color: #f00 }
    &.off { color: #555 }
    &.unknown { color: #f00 }
}

.db {
    &.syncing { color: #f90 }
    &.normal { color: #555 }
}
