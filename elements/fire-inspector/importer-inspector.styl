:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 12px
    margin-top: 2px

    font-family: Helvetica,Arial,sans-serif
    color: #aaa
    cursor: default
    outline: none

    .preview {
        display: block
        position: relative
        height: 200px
        border: 1px solid #171717

        &.hidden {
            display: none
        }

        .background {
            background-image: url('img/checkerboard-64x64.png')
            width: 100%
            height: 100%

            img {
                display: block
                height: 100%
                margin-left: auto
                margin-right: auto
            }
        }
    }

    fire-ui-toolbar {
        fire-ui-button {
            .fa-close {
                color: #f00

                &:hover {
                    color: #f00
                }

                &:active {
                    color: #f00
                }
            }

            .fa-check {
                color: #0f9

                &:hover {
                    color: #0f9
                }

                &:active {
                    color: #0f9
                }
            }

            &[disabled] {
                .fa-close, .fa-check {
                    color: inherit
                }
            }
        }
    }

    ::-webkit-scrollbar {
        height: 5px
        width: 5px
    }
    ::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3)
    }
    ::-webkit-scrollbar-track {
        // background-clip: padding-box
        background-color: rgba(255,255,255,0.1)
    }
    ::-webkit-scrollbar-corner {
        background-color: #171717
    }
    ::-webkit-scrollbar-button {
        display: none
    }
}
