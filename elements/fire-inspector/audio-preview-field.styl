:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch
    min-height: 100px
    overflow: hidden
}

.view {
    position: relative
    box-shadow: inset 0 0 15px 5px rgba(0,0,0,0.5)
    background: #292929
}

.content {
    position: absolute
    top: 15px
    right: 5px
    bottom: 15px
    left: 5px
}

canvas {
    // center it
    margin: auto;
    position: absolute;
    top: 0; left: 0; bottom: 0; right: 0;

    display: block
}

#Progress {
    margin: 0;
    position: absolute;
    left: -2px;
    display: block
    background: gray;
    width: 2px;
    border-radius: 2px
    height: 100%;
}

.label {
    position: absolute
    width: 100%
    bottom: 10px

    text-align: center
}

.info {
    position: absolute
    right: 5px
    top: 4px
}
