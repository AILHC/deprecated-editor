    background-color: #900
}

:host([highlighted]) #header {
    background-color: #c7722c
}

:host([invalid]) #header {
    background-color: #f00
}

#typeIcon {
    &.folder {
        background-image: url('img/assets-folder.png')
    }

    &.db {
        background-image: url('img/assets-db.png')
    }

    &.fire {
        background-image: url('img/assets-fire.png')
    }

    &.txt {
        background-image: url('img/assets-txt.png')
    }

    &.js {
        background-image: url('img/assets-js.png')
    }

    &.co {
        background-image: url('img/assets-co.png')
    }

    &.ts {
        background-image: url('img/assets-ts.png')
    }

    &.html {
        background-image: url('img/assets-html.png')
    }

    &.css {
        background-image: url('img/assets-css.png')
    }

