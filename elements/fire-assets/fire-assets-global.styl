html /deep/ {
    assets-tree[focused] {
        assets-item[selected]::shadow {
            #bar {
                background: #059
            }
        }

        assets-item[conflicted]::shadow {
            #bar {
                background: #900
            }
        }
    }

    // calculate by .type-icon.(width+marginRight)
    assets-item>assets-item{
        margin-left: 18px
    }

    assets-item::shadow fire-ui-text-input {
        position: absolute
        left: 9px
        top: -1px
        height: 18px
        width: calc(100% - 9px)

        &[icon] {
            left: 27px;
            width: calc(100% - 27px)
        }

        &::shadow .input-area {
            padding: 0px 1px
        }
    }
}
