:host {
    box-shadow: none
    background: none
    border: none
}

:host::shadow {
    .highlight {
        display: none
        position: absolute
        border: 2px solid #c7722c
        box-sizing: border-box

        pointer-events: none
    }

    .highlight[invalid] {
        border: 2px solid #f00
    }
}
