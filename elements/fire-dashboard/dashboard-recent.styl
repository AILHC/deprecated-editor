:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    padding: 30px

    display: flex
    flex-direction: column
    flex-wrap: nowrap

    .title {
        font-size: 25px
        margin-bottom: 20px

        color: #ffba00
    }

    .btn {
        display: inline-block
        margin-bottom: 20px
        padding: 8px 10px
        width: 100px
        text-align: center

        background: #171717

        &:hover {
            cursor: pointer
        }
        &:active {
            background: #171717 + 10%
        }
    }

    .border {
        box-sizing: border-box

        border: 1px solid #474747
        color: #ddd

        box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)
        background: #333

        overflow-x: hidden
        overflow-y: auto

        &.highlight {
            border: 1px solid #09f
        }
    }
}
