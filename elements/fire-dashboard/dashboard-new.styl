color-button-text = #bdbdbd
color-button-bg = #4a4a4a
color-border-normal = #4a4a4a - 50%

:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    padding: 20px

    display: flex
    flex-direction: column
    flex-wrap: nowrap

    .title {
        font-size: 25px
        margin-bottom: 20px

        color: #ffba00
    }

    .field {
        margin-bottom: 3px
    }

    span.space {
        width: 5px
        height: 5px
        display: block
    }

    .border {
        position: relative
        border: 1px solid #212121

        .content {
            padding: 10px

            overflow-x: hidden
            overflow-y: auto

            border-left: 1px solid rgba(255, 255, 255, 0.08)
            border-right: 1px solid rgba(255, 255, 255, 0.08)
            border-bottom: 1px solid rgba(255, 255, 255, 0.08)
            border-top: 1px solid rgba(255, 255, 255, 0.2)

            // background-color: #474747
            box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)
            background-color: #333

            &:focus {
                outline: none
            }
        }
    }

    .createbtn {
        float: right
        height: 30px
        border: 1px solid #252525
        border-radius: 2px
        padding: 4px 8px
        cursor: pointer
        color: white
        background-color: #D8AB32

        li {
            font-size: 14px
            margin-left: 5px
        }
        &:focus {
            outline: none
        }

        &:hover {
            background-color: #D8AB32 + 10%
        }

        &:active {
            background-color: #D8AB32 - 10%
        }
    }

    .disabled {
        pointer-events: none
        border-color: rgb(33,33,33)
        background-color: rgb(52,52,52)
        color: color-button-text - 50%
    }
}
