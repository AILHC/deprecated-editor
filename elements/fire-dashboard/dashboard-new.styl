:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    padding: 30px

    .flex-col {
        display: flex
        flex-direction: column
        flex-wrap: nowrap     
        align-items: stretch
        height: 100%
    }

    .title {
        font-size: 25px
        margin-bottom: 20px

        color: #ffba00
    }

    input {
        background-color: rgba( 255, 255, 255, 0.0 )
        border: 0px
        border-bottom: 1px solid black
        font-size: 20px
        margin-bottom: 20px
        width: 500px
        color: #ddd

        &:focus {
            outline: 0px
            border-bottom: 1px solid #09f
        }

        &::-webkit-input-placeholder {
            font-style: italic
            color: #666
        }
    }

    button {
        padding: 8px 20px
        background: #171717
        border: 0px
        font-size: 15px
        color: #ddd

        &:hover {
            cursor: pointer
        }
        &:active {
            background: #171717 + 10%
        }
        &:focus {
            outline: 0px
        }
    }

    button.small {
        font-size: 12px
        padding: 2px 10px
    }

    .border {
        flex: auto
        box-sizing: border-box
        height: 100%

        color: #ddd

        overflow-x: hidden
        overflow-y: auto
    }
}
