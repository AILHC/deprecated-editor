:host {
    position: absolute
    top: 0px
    bottom: 0px
    left: 0px
    right: 0px

    display: flex
    flex-direction: row
    flex-wrap: nowrap
    align-items: stretch

    font-family: Helvetica,Arial,sans-serif

    .sidebar {
        width: 250px
        padding: 10px

        #menu {
            margin-top: 20px

            .item {
                padding: 4px 8px
                font-size: 18px

                color: #aaa

                &:hover {
                    background-color: #222
                }

                &.active {
                    background-color: #444
                }
            }
        }

        .btn-group {
            margin-bottom: 10px
        }
    }

    .content {
        flex: auto
        position: relative
    }
}
