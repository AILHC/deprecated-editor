:host {
    position: relative
    display: inline-block

    border: 1px solid #444

    &(:hover) {
        border: 1px solid #444 + 20%
    }
    &([selected]) {
        border: 1px solid #09f
    }

    width: 100px
    height: 100px
    margin-right: 10px
    margin-bottom: 10px

    background: #222
    box-shadow: 0 0 8px 2px rgba(0,0,0,0.2)

    .icon-wrapper {
        display: block
        height: 80px
    }

    .icon {
        display: block
        margin: auto
    }

    .name {
        display: block

        font-size: 14px
        text-align: center
        height: 20px

        background: #171717
        color: #999
    }
}
