:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 13px
    white-space: nowrap

    margin-top: 10px
    margin-left: 3px
    margin-right: 3px
    margin-bottom: 3px

    font-family: Helvetica,Arial,sans-serif
    color: #999
    cursor: default
    outline: none

    .view {
        border: 1px solid #000
        box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)

        background-color: #333

        overflow-x: hidden
        overflow-y: auto
    }

    .item {
        padding: 2px 5px
        background: #222
    }

    .item:nth-child(even) {
        background: #292929
    }

    .cell {
        overflow: hidden
        text-overflow: ellipsis

        &.key {
        }

        &.value {
            color: #d60
        }
    }

    span.space {
        width: 5px
        height: 5px
    }

    ::-webkit-scrollbar {
        height: 5px
        width: 5px
    }
    ::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.3)
    }
    ::-webkit-scrollbar-track {
        // background-clip: padding-box
        background-color: rgba(255,255,255,0.1)
    }
    ::-webkit-scrollbar-corner {
        background-color: #171717
    }
    ::-webkit-scrollbar-button {
        display: none
    }
}
