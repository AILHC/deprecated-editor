:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 12px
    white-space: nowrap

    // box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2);
    color: #ddd
    background: #333
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    cursor: default
}

.border {
    border: 1px solid #171717
    position: relative
    background: #333
}

canvas {
    position: relative

    &:focus {
        outline: 0
    }
}
