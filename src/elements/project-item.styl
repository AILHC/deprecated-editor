:host {
    display: block

    font-size: 12px
    margin-left: 24px

    .wrapper {
        .item {
            height: 16px
            display: inline-block
            white-space: nowrap
            position: relative

            font-family: Helvetica,Arial,sans-serif
            color: #aaa
            cursor: default 

            .border {
                display: flex
                flex-direction: row
                flex-wrap: nowrap     
                align-items: center

                .fold-icon {
                    display: none
                    width: 10px

                    cursor: pointer
                    text-align: center
                }

                .type-icon {
                    color: #fff
                    width: 14px
                }

                .fa-folder, .fa-folder-open {
                    color: #09f
                }
            }
        }

        .bar {
            display: block
            position: absolute
            left: 0
            width: 100%
            height: 15px

            visibility: none
        }

        // &:hover {
        //     .bar {
        //         visibility: visible
        //         background: #333 - 20%
        //     }
        // }
    }

    &([foldable]) {
        margin-left: 14px

        .wrapper {
            .item {
                .border {
                    .fold-icon {
                        display: inline-block
                    }
                }
            }
        }
    }

    &([selected]) {
        .wrapper {
            .bar {
                visibility: visible
                background: #555
            }
        }
    }
}
