:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap     
    align-items: stretch

    font-size: 12px
    margin-top: 2px;
    border: 1px solid #171717;
    white-space: nowrap

    // box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2);
    background: #333;
    overflow: auto;
    font-family: Helvetica,Arial,sans-serif
    cursor: default 
    color: #ddd

    .border {
        position: relative

        canvas {
            position: relative
            top: 0px
            left: 0px
        }
    }
}
