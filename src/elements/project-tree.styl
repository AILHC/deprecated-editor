:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap     
    align-items: stretch

    font-size: 12px
    margin-top: 2px

    font-family: Helvetica,Arial,sans-serif
    color: #aaa
    cursor: default 

    .view {
        overflow-x: hidden
        overflow-y: auto
        border: 1px solid #171717
        padding: 5px
        position: relative

        outline: none
        box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)
        background: #333

        // enable this will allow the width exceed the .view.width 
        // .content {
        //     display: inline-block
        // }

        &::-webkit-scrollbar {
            height: 5px
            width: 5px
        }
        &::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.3)
        }
        &::-webkit-scrollbar-track {
            // background-clip: padding-box
            background-color: rgba(255,255,255,0.1)
        }
        &::-webkit-scrollbar-corner {
            background-color: #171717
        }
        &::-webkit-scrollbar-button {
            display: none
        }
    }

    // &([focused]) .view {
    //     border: 1px solid #04a
    // }

    &([focused]) {
        project-item[selected]::shadow {
            .wrapper {
                .bar {
                    background: #059
                }
            }
        }
    }
}
