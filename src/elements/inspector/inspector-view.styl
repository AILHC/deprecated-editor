:host {
    display: flex
    flex-direction: column
    flex-wrap: nowrap     
    align-items: stretch

    font-size: 12px
    margin-top: 2px

    font-family: Helvetica,Arial,sans-serif
    color: #aaa
    cursor: default 
    outline: none

    .fields {
        position: relative
    }

    .preview {
        position: relative
        height: 200px

        background-color: #000

        img {
            height: 100%
        }
    }
}
