:host {
    display: block

    font-size: 12px
    margin-left: 24px

    .wrapper {

        .bar {
            display: block
            position: absolute
            left: 0
            width: 100%
            height: 15px

            visibility: none
        }

        // &:hover {
        //     .bar {
        //         visibility: visible
        //         background: #333 - 20%
        //     }
        // }

        .input-wrapper {
            position: relative

            .item {
                display: inline-block
                white-space: nowrap
                position: relative
                height: 16px

                font-family: Helvetica,Arial,sans-serif
                color: #aaa
                cursor: default 

                .item-wrapper {
                    display: flex
                    flex-direction: row
                    flex-wrap: nowrap     
                    align-items: center

                    .fold-icon {
                        display: none
                        width: 10px

                        cursor: pointer
                        text-align: center
                    }

                    .type-icon {
                        color: #fff
                        width: 14px
                    }

                    .fa-folder, .fa-folder-open {
                        color: #09f
                    }
                }
            }

            fire-ui-text-input {                         
                position: absolute
                top: -1px
                left: 14px
                height: 16px
                min-height: 16px
                width: calc(100% - 14px)

                & /deep/ .input-area {                         
                    padding: 0px 2px
                }
            }
        }
    }

    &([foldable]) {
        margin-left: 14px

        .wrapper {
            .input-wrapper {
                .item {
                    .item-wrapper {
                        .fold-icon {
                            display: inline-block
                        }
                    }
                }

                fire-ui-text-input {                         
                    left: 24px
                    width: calc(100% - 24px)
                }
            }
        }
    }

    &([selected]) {
        .wrapper {
            .bar {
                visibility: visible
                background: #555
            }
        }
    }

    &([highlighted]) {
        // border: 2px solid #c7722c
        .wrapper {
            background: #c7722c
        }
    }
}
